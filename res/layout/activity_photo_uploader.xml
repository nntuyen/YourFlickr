<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_padding"
    tools:context="com.nntuyen.yourflickr.ui.activity.PhotoUploaderActivity" >

    <ImageView
        android:id="@+id/ivPreview"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_launcher"
        android:layout_gravity="center_horizontal" />
    
    <Button
        android:id="@+id/btnUpload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_upload_photo"
        android:visibility="gone"
        android:background="@drawable/button_selector"
        android:textColor="@color/icons"
        android:layout_marginBottom="@dimen/button_margin_bottom"
        android:layout_gravity="center_horizontal" />
    
    <Button
        android:id="@+id/btnPickPhoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_pick_photo"
        android:background="@drawable/button_selector"
        android:textColor="@color/icons"
        android:layout_marginBottom="@dimen/button_margin_bottom"
        android:layout_gravity="center_horizontal" />
    
    <Button
        android:id="@+id/btnUseCamera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_use_camera"
        android:background="@drawable/button_selector"
        android:textColor="@color/icons"
        android:layout_marginBottom="@dimen/button_margin_bottom"
        android:layout_gravity="center_horizontal" />
    
    <Button
        android:id="@+id/btnGoToGallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_navigate_gallery"
        android:background="@drawable/button_selector"
        android:textColor="@color/icons"
        android:layout_marginBottom="@dimen/button_margin_bottom"
        android:layout_gravity="center_horizontal" />
    
    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_login"
        android:background="@drawable/button_selector"
        android:textColor="@color/icons"
        android:layout_marginBottom="@dimen/button_margin_bottom"
        android:layout_gravity="center_horizontal" />
    
    <ProgressBar
        android:id="@+id/progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="gone" />

</LinearLayout>
